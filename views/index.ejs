<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylessheet\style.css">
</head>

<body>
    <form action="/create" method="post">
        <div class="con">
            <input id="user" type="text" placeholder="Enter name" name="title">
            <textarea name="details" id="dis" placeholder="desc"></textarea>
            <input id="sub" type="submit" value="Submit">
        </div>
    </form>
    <div class="allcards">
        <% if(files.length>0) { %>
            <% files.forEach(function(val){ %>
                <div class="cards">
                    <div class="card">
                        <h1 id="cardh1">
                            <%= val%>
                        </h1>
                        <div class="link">
                            <a href="/read/<%= val %>">ReadMore</a>
                            <a href="/edit/<%= val%>">Edit</a>
                        </div>
                        <!-- <h3><%= %></h3> -->

                    </div>
                </div>
                <% }) %>
                    <% } else { %>
                        <h3>NO Task Yet</h3>
                        <% } %>

    </div>
</body>

</html>